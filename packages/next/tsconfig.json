{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "bundler",
		"target": "ESNext",
		"strict": true,
		"outDir": "dist",
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"baseUrl": ".",
		"lib": ["ESNext", "DOM"],
		"paths": { "@/*": ["src/*"] },
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "react-jsx"
	},
	"include": ["src"]
}
