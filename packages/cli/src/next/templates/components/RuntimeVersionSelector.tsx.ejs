interface RuntimeVersionSelectorProps {
	selectedRuntimeVersion?: string;
	onChange: (selectedRuntimeVersion: string) => void;
	runtimeVersions: string[];
}

export function RuntimeVersionSelector({
	onChange,
	runtimeVersions,
	selectedRuntimeVersion,
}: RuntimeVersionSelectorProps) {
	return (
		<div className="bg-white rounded-xl shadow p-6">
			<h2 className="text-lg font-semibold mb-4">Select Runtime Version</h2>
			<div className="flex flex-wrap gap-2">
				{runtimeVersions.map((version) => (
					<button
						type="button"
						key={version}
						onClick={() => onChange(version)}
						className={`px-4 py-2 rounded-lg text-sm font-medium transition ${
							version === selectedRuntimeVersion
								? "bg-blue-600 text-white"
								: "bg-gray-200 text-gray-700 hover:bg-gray-300"
						}`}
					>
						{version}
					</button>
				))}
			</div>
		</div>
	);
}
